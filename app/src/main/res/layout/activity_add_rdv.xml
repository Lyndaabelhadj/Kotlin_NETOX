<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/make_rdv"
    tools:context=".views.addRdv">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/background_category3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txt_layout_username"
        app:hintEnabled="false"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background_edittext"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColorHint="#FF000000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txt_layout_hour"
        app:hintEnabled="false"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/editTextHeure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background_edittext"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Hour"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColorHint="#FF000000" />
    </com.google.android.material.textfield.TextInputLayout>
   <androidx.constraintlayout.widget.ConstraintLayout

       android:layout_width="match_parent"
       android:layout_height="100dp">

       <TextView

           android:id="@+id/btn_addRdv"
           android:layout_width="250dp"
           android:layout_height="48dp"
           android:gravity="center"
           android:text="Add appointment"
           android:textSize="18dp"
           android:textStyle="bold"
           android:background="@drawable/backgroudappointment"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>